CREATE TABLE song (
   name TEXT NOT NULL,
   number INTEGER AS Int NOT NULL PRIMARY KEY,
   withChords TEXT,
   withoutChords TEXT NOT NULL,
   favorite INTEGER AS Short
);

listAll:
SELECT *
FROM song;

add:
INSERT OR REPLACE INTO song (name, number, withChords, withoutChords)
VALUES ?;

updateFavorite:
UPDATE song
SET favorite=?
WHERE number=?;

songCount:
SELECT COUNT(*)
FROM song;

getSong:
SELECT *
FROM song
WHERE number = ?;

listFavorites:
SELECT *
FROM song
WHERE favorite == 1;